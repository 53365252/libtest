<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/holo_blue_dark"
    android:padding="10dp">

    <TextView
        android:id="@+id/time_v"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/icon_v"
        app:layout_constraintTop_toBottomOf="@id/time_v"
        app:layout_constraintStart_toStartOf="@id/time_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/icon_v"
        app:layout_constraintStart_toStartOf="@id/time_v"
        android:id="@+id/temperature_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>